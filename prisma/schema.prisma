generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole @default(admin)
  orders    Order[]
}

model Customer {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  addresses Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  storeId   String?
  orders    Order[]

  @@index([email])
}

model Product {
  id                String           @id @default(cuid())
  name              String
  slug              String           @unique
  shortDescription  String?
  description       String?
  price             Float
  compareAtPrice    Float?
  supplierPrice     Float?
  images            String
  supplierUrl       String?
  supplierProductId String?
  profitMargin      String?
  autoImport        Boolean          @default(false)
  lastSynced        DateTime?
  category          String?
  tags              String
  sku               String?          @unique
  stock             Int              @default(0)
  isActive          Boolean          @default(true)
  specs             Json?
  metaTitle         String?
  metaDescription   String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  storeId           String?
  supplierId        String?
  supplierSku       String?
  supplierName      SupplierName?
  orderItems        OrderItem[]
  variants          ProductVariant[]

  @@index([category])
  @@index([supplierName])
  @@index([isActive])
  @@index([storeId])
}

model ProductVariant {
  id             String      @id @default(cuid())
  productId      String
  name           String
  sku            String?     @unique
  price          Float
  compareAtPrice Float?
  supplierPrice  Float?
  image          String?
  attributes     Json
  stock          Int         @default(0)
  isActive       Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]
  product        Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([sku])
  @@index([isActive])
}

model Order {
  id                     String               @id @default(cuid())
  orderNumber            String               @unique
  customerId             String?
  placedById             String?
  items                  Json
  subtotal               Float
  shippingCost           Float
  tax                    Float
  total                  Float
  shippingAddress        Json
  paymentIntentId        String?
  supplierOrderId        String?
  autoOrderAttempts      Int                  @default(0)
  autoOrderError         String?
  trackingNumber         String?
  trackingUrl            String?
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  storeId                String?
  shippingCarrier        String?
  status                 OrderStatus          @default(pending)
  paymentMethod          PaymentMethod?
  paymentStatus          PaymentStatus        @default(pending)
  supplierOrderStatus    SupplierOrderStatus? @default(PENDING)
  customerEmail          String?
  stripeSessionId        String?              @unique
  adminEmailSentAt       DateTime?
  adminEmailStatus       EmailStatus?
  customerEmailLastError String?
  customerEmailSentAt    DateTime?
  customerEmailStatus    EmailStatus          @default(NOT_SENT)
  fulfillmentStatus      FulfillmentStatus    @default(NEW)
  customer               Customer?            @relation(fields: [customerId], references: [id])
  placedBy               User?                @relation(fields: [placedById], references: [id])
  orderItems             OrderItem[]
  supplierEvents         SupplierOrderEvent[]

  @@index([customerId])
  @@index([status, createdAt])
  @@index([fulfillmentStatus, createdAt])
  @@index([paymentStatus])
  @@index([supplierOrderId])
  @@index([storeId])
  @@index([stripeSessionId])
  @@index([customerEmailStatus])
}

model OrderItem {
  id          String          @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  price       Float
  createdAt   DateTime        @default(now())
  variantId   String?
  variantName String?
  order       Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product         @relation(fields: [productId], references: [id])
  variant     ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
}

model SupplierOrderEvent {
  id        String               @id @default(cuid())
  orderId   String
  metadata  Json?
  createdAt DateTime             @default(now())
  oldStatus SupplierOrderStatus?
  newStatus SupplierOrderStatus
  order     Order                @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([newStatus, createdAt])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model AbandonedCart {
  id          String     @id @default(cuid())
  email       String?
  items       Json
  storeId     String?
  token       String?    @unique
  lastUpdated DateTime   @updatedAt
  createdAt   DateTime   @default(now())
  status      CartStatus @default(ACTIVE)

  @@index([email])
  @@index([status, lastUpdated])
  @@index([storeId])
}

model DiscountCode {
  id         String    @id @default(cuid())
  code       String    @unique
  percentOff Float?
  amountOff  Float?
  usageLimit Int?
  timesUsed  Int       @default(0)
  storeId    String?
  expiresAt  DateTime?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([storeId])
  @@index([isActive, expiresAt])
}

model PushSubscription {
  id         String   @id @default(cuid())
  endpoint   String   @unique
  keys       Json?
  customerId String?
  storeId    String?
  createdAt  DateTime @default(now())

  @@index([storeId])
}

model Affiliate {
  id          String           @id @default(cuid())
  code        String           @unique
  name        String?
  ratePercent Float            @default(10)
  storeId     String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  clicks      AffiliateClick[]
  orders      AffiliateOrder[]

  @@index([storeId])
}

model AffiliateClick {
  id          String    @id @default(cuid())
  affiliateId String
  ip          String?
  userAgent   String?
  createdAt   DateTime  @default(now())
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
}

model AffiliateOrder {
  id               String    @id @default(cuid())
  affiliateId      String
  orderId          String
  commissionAmount Float     @default(0)
  createdAt        DateTime  @default(now())
  affiliate        Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
  @@index([orderId])
}

enum UserRole {
  admin
  manager
  support
}

enum OrderStatus {
  pending
  paid
  processing
  shipped
  delivered
  cancelled
}

enum PaymentStatus {
  pending
  paid
  failed
  refunded
}

enum PaymentMethod {
  stripe
  vipps
  klarna
  paypal
}

enum SupplierOrderStatus {
  PENDING
  SENT_TO_SUPPLIER
  ACCEPTED_BY_SUPPLIER
  SHIPPED
  DELIVERED
  CANCELLED
}

enum CartStatus {
  ACTIVE
  RECOVERED
  EXPIRED
}

enum SupplierName {
  alibaba
  ebay
  temu
}

enum FulfillmentStatus {
  NEW
  ORDERED_FROM_SUPPLIER
  SHIPPED
  DELIVERED
  CANCELLED
}

enum EmailStatus {
  NOT_SENT
  SENT
  FAILED
}
